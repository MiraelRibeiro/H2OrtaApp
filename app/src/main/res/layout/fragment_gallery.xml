<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg_verde"
    tools:context=".ui.gallery.GalleryFragment">

    <ImageView
        android:id="@+id/imagemBrasil"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bandeira_brasil"
        app:layout_constraintEnd_toStartOf="@+id/imagemUSA"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagemUSA" />

    <ImageView
        android:id="@+id/imagemUSA"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/bandeira_estados_unidos"
        app:layout_constraintBottom_toTopOf="@+id/imagemFranca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imagemBrasil"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imagemEspanha"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/bandeira_espanha"
        app:layout_constraintEnd_toStartOf="@+id/imagemFranca"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagemFranca" />

    <ImageView
        android:id="@+id/imagemFranca"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bandeira_franca"
        app:layout_constraintBottom_toTopOf="@+id/imagemItalia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imagemEspanha"
        app:layout_constraintTop_toBottomOf="@+id/imagemUSA" />

    <ImageView
        android:id="@+id/imagemItalia"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/bandeira_italia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemFranca" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:text="Escolha um Idioma"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imagemUSA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>